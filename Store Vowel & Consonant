#include <stdio.h>
#include <stdlib.h>
int main()
{
    FILE *f1,*f2,*f3;
    f1 = fopen("DATA.txt","w");
    f2 = fopen("VOWEL.txt","w");
    f3 = fopen("CONSONANT.txt","w");
    if (f1==NULL || f2==NULL || f3==NULL)
    {
        printf("Error opening file!\n");
        exit(0);
    }
    char str[100];
    printf("Enter the string: ");
    gets(str);
    fprintf(f1,"%s",str);
    fclose(f1);
    f1 = fopen("DATA.txt","r");
    char ch;
    while (fscanf(f1,"%c",&ch)!=EOF)
    {
        if (ch=='A' || ch=='E' || ch=='I' || ch=='O' || ch=='U' ||
            ch=='a' || ch=='e' || ch=='i' || ch=='o' || ch=='u')
            putc(ch,f2);
        else
            putc(ch,f3);
    }
    fclose(f1);
    fclose(f2);
    fclose(f3);
    f2 = fopen("VOWEL.txt","r");
    f3 = fopen("CONSONANT.txt","r");
    if (f2==NULL || f3==NULL)
    {
        printf("Error opening file!\n");
        exit(0);
    }
    printf("Contents of Vowel file:\n");
    while ((ch=getc(f2))!=EOF)
    {
        printf("%c ",ch);
    }
    printf("\nContents of Consonant file:\n");
    while ((ch=getc(f3))!=EOF)
    {
        printf("%c ",ch);
    }
    fclose(f2);
    fclose(f3);
    return 0;
}
